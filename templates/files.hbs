<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>File Viewer</title>

        <link rel="stylesheet" href="/static/style.css" />
        <script
            src="https://kit.fontawesome.com/118853f8db.js"
            crossorigin="anonymous"
        ></script>
    </head>
    <body>
        <div class="container">
            {{#if parent}}
                <div class="card">
                    <a class="card-content" href="{{{parent}}}">
                        <i class="fa-solid fa-arrow-up icon"></i>
                    </a>
                </div>
            {{/if}}
            {{#each folders}}
                <div class="card">
                    <a class="card-content" href="{{{../path}}}{{{this}}}">
                        <i class="fa-solid fa-folder icon folder"></i><span
                            class="name"
                        >{{this}}</span>
                    </a>
                </div>
            {{/each}}
            {{#each files}}
                <div class="card">
                    <a class="card-content" href="{{{../path}}}{{{this}}}">
                        <i class="fa-solid fa-file icon file"></i><span
                            class="name"
                        >{{{this}}}</span>
                    </a>
                </div>
            {{/each}}
        </div>
    </body>
</html>